<h1>Создайте событие</h1>

{{#if errors}}
<span>Something went wrong:</span>
<ul class="error-list pad-b-2">
  {{#each errors as |error|}}
  <li class="error-item">{{error}}</li>
  {{/each}}
</ul>
{{/if}}


<form method="post" action="/events">
  <label for="title-input" class="block mar-b-1">Выберите вид активности</label>

  <input id="title-input" name="title" type="text" value="{{event.type}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">
  <br>
  <label for="title-input" class="block mar-b-1">Дата</label>
  <input id="title-input" name="time" type="datetime-local" value="{{event.time}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">
  <br>

  <label for="body-textarea" class="block mar-b-1">Подробности:</label>
  <textarea id="body-textarea" name="body" value="{{event.body}}" tabindex="2"
    class="block w-100 h-10 no-resize no-outline no-border no-resize pad-1 mar-b-2">{{event.body}}</textarea>
  <br>
  <input type="submit" value="Соберем всех!" tabindex="3"
    class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
