<a href="/events/new" class="block button w-100 mar-t-2 mar-b-3 pad-2 round-1 text-c center">Создать новую тренировку</a>

<main role="main">
  <ul class="events-list no-bullets no-padding">
    {{#each events}}
    <li class="entry-item pad-b-4">
      <a href="/events/{{id}}" class="entry-title font-2 pad-b-1-4 c-white">{{type}}</a>
      <span class="entry-date block font-3-4 c-lt-gray" href="">Дата: {{time}} </span>
      <p class="entry-stub">Организатор: {{author}}</p>
      <p class="entry-stub">Участвуют: {{participants}}</p>
    </li>
    {{/each}}
  </ul>
</main>
